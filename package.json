{
  "name": "sellerguard",
  "version": "0.1.0",
  "private": true,
  "description": "SellerGuard MVP runtime shell",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "dev:mem": "powershell -Command \"$env:DB_DRIVER='pg-mem'; node --watch src/index.js\"",
    "db:migrate": "node src/db/migrate.js",
    "lint": "eslint .",
    "test": "node --test tests/**/*.test.js",
    "test:unit": "node --test tests/unit/*.test.js",
    "test:integration": "node --test tests/integration/*.test.js"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "fastify": "^5.2.1",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "pg-mem": "^3.0.5"
  }
}
